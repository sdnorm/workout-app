<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @mesocycle.split_type.humanize %></h1>
      <p class="text-sm text-gray-400">
        Week <%= @mesocycle.current_week %> of <%= @mesocycle.duration_weeks %>
        &middot; Target RIR: <%= @mesocycle.target_rir %>
        <% if @mesocycle.deloading? %>
          &middot; <span class="text-yellow-400">Deloading</span>
        <% end %>
      </p>
    </div>
    <span class="text-xs px-2 py-1 rounded-full
      <%= case @mesocycle.status
          when 'active' then 'bg-blue-900/50 text-blue-300 border border-blue-800'
          when 'deloading' then 'bg-yellow-900/50 text-yellow-300 border border-yellow-800'
          when 'completed' then 'bg-green-900/50 text-green-300 border border-green-800'
          end %>">
      <%= @mesocycle.status.humanize %>
    </span>
  </div>

  <div>
    <h2 class="text-lg font-semibold mb-3">Volume Targets (sets/week)</h2>
    <div class="space-y-2">
      <% @volumes.each do |vol| %>
        <div class="bg-gray-900 rounded-lg border border-gray-800 p-3">
          <div class="flex items-center justify-between mb-1">
            <span class="font-medium text-sm"><%= vol.muscle_group.name %></span>
            <span class="text-sm font-semibold text-blue-400"><%= vol.current_sets %> sets</span>
          </div>
          <div class="w-full bg-gray-800 rounded-full h-1.5">
            <% pct = vol.mrv > 0 ? (vol.current_sets.to_f / vol.mrv * 100).clamp(0, 100) : 0 %>
            <div class="h-1.5 rounded-full <%= pct > 85 ? 'bg-red-500' : pct > 60 ? 'bg-yellow-500' : 'bg-blue-500' %>"
                 style="width: <%= pct.round %>%"></div>
          </div>
          <div class="flex justify-between text-xs text-gray-500 mt-1">
            <span>MEV: <%= vol.mev %></span>
            <span>MRV: <%= vol.mrv %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if @mesocycle.active? || @mesocycle.deloading? %>
    <div class="flex gap-3 pt-4">
      <% unless @mesocycle.deloading? %>
        <%= button_to "Advance Week", complete_mesocycle_path(@mesocycle),
          class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition",
          form: { method: :post, action: start_deload_mesocycle_path(@mesocycle) } %>
      <% end %>
      <%= button_to "Complete Mesocycle", complete_mesocycle_path(@mesocycle),
        class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg transition",
        data: { turbo_confirm: "Mark this mesocycle as completed?" } %>
    </div>
  <% end %>

  <% if @mesocycle.notes.present? %>
    <div class="bg-gray-900 rounded-lg border border-gray-800 p-3">
      <p class="text-sm text-gray-400"><%= @mesocycle.notes %></p>
    </div>
  <% end %>
</div>
