<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">Program</h1>
    <%= link_to "New Mesocycle", new_mesocycle_path,
      class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg text-sm transition" %>
  </div>

  <% if @active_mesocycle %>
    <div class="bg-gray-900 rounded-xl border border-blue-800 p-4">
      <div class="flex items-center justify-between mb-4">
        <div>
          <p class="text-xs text-blue-400 font-medium uppercase tracking-wide">Active</p>
          <h2 class="text-lg font-semibold"><%= @active_mesocycle.split_type.humanize %></h2>
        </div>
        <div class="text-right">
          <p class="text-3xl font-bold text-blue-400"><%= @active_mesocycle.current_week %></p>
          <p class="text-xs text-gray-500">of <%= @active_mesocycle.duration_weeks %> weeks</p>
        </div>
      </div>

      <!-- Week progress bar -->
      <div class="w-full bg-gray-800 rounded-full h-2 mb-4">
        <div class="bg-blue-500 h-2 rounded-full" style="width: <%= (@active_mesocycle.current_week.to_f / @active_mesocycle.duration_weeks * 100).round %>%"></div>
      </div>

      <div class="flex gap-2">
        <%= link_to "View Details", mesocycle_path(@active_mesocycle),
          class: "flex-1 text-center bg-gray-800 hover:bg-gray-700 text-white py-2 rounded-lg text-sm transition" %>
        <% unless @active_mesocycle.deloading? %>
          <%= button_to "Start Deload", start_deload_mesocycle_path(@active_mesocycle),
            class: "bg-yellow-700 hover:bg-yellow-600 text-white py-2 px-4 rounded-lg text-sm transition",
            data: { turbo_confirm: "Start deload week?" } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% completed = @mesocycles.select(&:completed?) %>
  <% if completed.any? %>
    <div>
      <h2 class="text-lg font-semibold mb-3">Past Mesocycles</h2>
      <div class="space-y-2">
        <% completed.each do |mesocycle| %>
          <%= link_to mesocycle_path(mesocycle), class: "block bg-gray-900 rounded-lg border border-gray-800 p-3 hover:border-gray-700 transition" do %>
            <div class="flex items-center justify-between">
              <div>
                <p class="font-medium"><%= mesocycle.split_type.humanize %></p>
                <p class="text-sm text-gray-400"><%= mesocycle.duration_weeks %> weeks</p>
              </div>
              <div class="text-right text-sm text-gray-400">
                <% if mesocycle.start_date %>
                  <%= mesocycle.start_date.strftime("%b %d") %> â€” <%= mesocycle.end_date&.strftime("%b %d, %Y") %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
