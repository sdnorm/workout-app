<%= form_with model: mesocycle, class: "space-y-4" do |f| %>
  <div>
    <label class="block text-sm font-medium text-gray-300 mb-1">Split Type</label>
    <%= f.select :split_type,
      [["Push/Pull/Legs", "push_pull_legs"], ["Upper/Lower", "upper_lower"], ["Full Body", "full_body"]],
      {},
      class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100" %>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-300 mb-1">Duration (weeks)</label>
    <%= f.select :duration_weeks, (3..6).to_a, {},
      class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100" %>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-300 mb-1">Notes</label>
    <%= f.text_area :notes, rows: 3, class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100",
      placeholder: "Goals for this mesocycle..." %>
  </div>

  <div class="flex gap-3">
    <%= f.submit class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition cursor-pointer" %>
    <%= link_to "Cancel", mesocycles_path, class: "flex-1 bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 rounded-lg transition text-center" %>
  </div>
<% end %>
