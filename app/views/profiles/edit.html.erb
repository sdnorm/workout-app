<div class="space-y-6">
  <h1 class="text-2xl font-bold">Edit Profile</h1>

  <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm font-medium text-gray-300 mb-1">Training Experience</label>
      <%= f.select :training_experience,
        [["Beginner", "beginner"], ["Intermediate", "intermediate"], ["Advanced", "advanced"]],
        {},
        class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-300 mb-1">AI Provider</label>
      <%= f.select :default_provider,
        [["Anthropic (Claude)", "anthropic"], ["xAI (Grok)", "xai"]],
        {},
        class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100" %>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Save", class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition cursor-pointer" %>
      <%= link_to "Cancel", profile_path, class: "flex-1 bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 rounded-lg transition text-center" %>
    </div>
  <% end %>
</div>
