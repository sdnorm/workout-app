<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">Training Methodologies</h1>
    <%= link_to "New Methodology", new_training_methodology_path,
      class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg text-sm transition" %>
  </div>

  <div class="space-y-3">
    <% @training_methodologies.each do |methodology| %>
      <%= link_to training_methodology_path(methodology),
        class: "block bg-gray-900 rounded-xl border #{methodology.active? ? 'border-blue-800' : 'border-gray-800'} p-4 hover:border-gray-700 transition" do %>
        <div class="flex items-center justify-between">
          <div>
            <div class="flex items-center gap-2">
              <h2 class="font-semibold"><%= methodology.name %></h2>
              <% if methodology.active? %>
                <span class="text-xs px-2 py-0.5 rounded-full bg-blue-900/50 text-blue-300 border border-blue-800">Active</span>
              <% end %>
            </div>
            <% if methodology.description.present? %>
              <p class="text-sm text-gray-400 mt-1"><%= truncate(methodology.description, length: 100) %></p>
            <% end %>
          </div>
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @training_methodologies.empty? %>
    <div class="text-center py-8 text-gray-400">
      <p>No training methodologies yet.</p>
      <p class="text-sm mt-1">Create one to customize your AI workout generation.</p>
    </div>
  <% end %>
</div>
