<div class="space-y-6">
  <h1 class="text-2xl font-bold">Edit Run</h1>
  <%= render "form", run: @run %>

  <div class="pt-4 border-t border-gray-800">
    <%= button_to "Delete Run", run_path(@run), method: :delete,
      class: "text-red-400 hover:text-red-300 text-sm",
      data: { turbo_confirm: "Delete this run?" } %>
  </div>
</div>
