<div class="space-y-6">
  <h1 class="text-2xl font-bold">Edit Workout</h1>

  <%= form_with model: @workout, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm font-medium text-gray-300 mb-1">Date</label>
      <%= f.date_field :date, class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-300 mb-1">Notes</label>
      <%= f.text_area :notes, rows: 3, class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-3 py-2 text-gray-100" %>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Save", class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition cursor-pointer" %>
      <%= link_to "Cancel", @workout, class: "flex-1 bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 rounded-lg transition text-center" %>
    </div>
  <% end %>
</div>
