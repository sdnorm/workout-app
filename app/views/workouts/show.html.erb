<div class="space-y-4">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @workout.location&.humanize %> Workout</h1>
      <p class="text-sm text-gray-400">
        <%= @workout.date.strftime("%A, %b %d") %>
        <% if @workout.week_number %>
          &middot; Week <%= @workout.week_number %>
        <% end %>
      </p>
    </div>
    <span class="text-xs px-2 py-1 rounded-full
      <%= case @workout.status
          when 'planned' then 'bg-yellow-900/50 text-yellow-300 border border-yellow-800'
          when 'in_progress' then 'bg-blue-900/50 text-blue-300 border border-blue-800'
          when 'completed' then 'bg-green-900/50 text-green-300 border border-green-800'
          when 'generating' then 'bg-purple-900/50 text-purple-300 border border-purple-800'
          when 'generation_failed' then 'bg-red-900/50 text-red-300 border border-red-800'
          end %>">
      <%= @workout.status.humanize %>
    </span>
  </div>

  <% if @workout.generating? %>
    <div class="text-center py-12" data-controller="poll" data-poll-interval-value="2000">
      <div class="inline-flex items-center gap-3 mb-4">
        <svg class="animate-spin h-6 w-6 text-purple-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <p class="text-lg text-purple-300 font-medium">Generating your workout...</p>
      </div>
      <p class="text-sm text-gray-500">This usually takes 10-15 seconds</p>
    </div>
  <% elsif @workout.generation_failed? %>
    <div class="text-center py-8">
      <div class="bg-red-900/20 border border-red-800 rounded-lg p-4 mb-4 mx-auto max-w-md">
        <p class="text-red-300 font-medium mb-2">Workout generation failed</p>
        <% if @workout.generation_error.present? %>
          <p class="text-sm text-red-400/80"><%= @workout.generation_error %></p>
        <% end %>
      </div>
      <%= button_to "Retry", generate_workout_path(@workout),
        class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition" %>
    </div>
  <% elsif @workout.planned? && @workout.workout_exercises.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-400 mb-4">No exercises yet. Generate a workout with AI.</p>
      <%= button_to "Generate Workout", generate_workout_path(@workout),
        class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition" %>
    </div>
  <% end %>

  <turbo-frame id="workout_exercises">
    <div class="space-y-3">
      <% @workout_exercises.each do |we| %>
        <%= render "workout_exercises/workout_exercise", workout_exercise: we %>
      <% end %>
    </div>
  </turbo-frame>

  <% if @workout.workout_exercises.any? && !@workout.completed? %>
    <div class="flex gap-3 pt-4">
      <%= button_to "Complete Workout", complete_workout_path(@workout),
        class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg transition" %>
      <%= button_to "Regenerate", regenerate_workout_path(@workout),
        class: "bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-4 rounded-lg transition",
        data: { turbo_confirm: "This will replace all exercises. Continue?" } %>
    </div>
  <% end %>

  <% if @workout.notes.present? %>
    <div class="bg-gray-900 rounded-lg border border-gray-800 p-3">
      <p class="text-sm text-gray-400"><%= @workout.notes %></p>
    </div>
  <% end %>
</div>
